<!--pages/login/login.wxml-->
<view class="container">
  <view class="wrapper">
    <view class="left-top-sign">Login</view>
    <view class="welcome">
      欢迎回来！
    </view>
    <view class="input-content">
      <form catchsubmit="formSubmit" catchreset="formReset">
        <view class="input-item">
          <text class="tit">手机号码:</text>
          <input type="text" placeholder="请输入手机号码" data-test="abc" data-type="phone" id="phone" 
          name="phone"/>
        </view>
        <view class="input-item">
          <text class="tit">密码:</text>
          <input type="password"  placeholder="请输入密码" data-test="abc" data-type="password" id="password" 
          name="password"/>
        </view>
        <button class="confirm-btn" form-type="submit">登录</button>
      </form>
    </view>
    
    <view class="forget-section">
      忘记密码?
    </view>
  </view>
  <view class="register-section">
    还没有账号?
    <text >马上注册</text>
  </view>
</view>
